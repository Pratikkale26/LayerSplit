# ============================================================
# API Server Environment Variables - EXAMPLE
# Copy this to .env and fill in values
# ============================================================

# Server
PORT=3001
NODE_ENV=production

# Database - Render PostgreSQL
DATABASE_URL=postgresql://user:password@host:5432/database

# Sui Blockchain
SUI_NETWORK=testnet
PACKAGE_ID=0x_your_package_id
BILL_REGISTRY_ID=0x_your_registry_id

# CORS - Your Vercel domain
CORS_ORIGIN=https://layersplit.vercel.app

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token
TMA_URL=https://layersplit.vercel.app
